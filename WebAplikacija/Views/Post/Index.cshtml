@model CassandraDataLayer.QueryEntities.Tema

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <h4>Post</h4>
    <hr />
    <div class="row">
        <div class="form-horizontal col-xs-6">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">

                @Html.LabelFor(model => model.delatnostID, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @{
                        List<SelectListItem> listItems = new List<SelectListItem>();
                        foreach (CassandraDataLayer.QueryEntities.Delatnost d in CassandraDataLayer.DataProvider.VratiSveDelatnosti())
                        {
                            listItems.Add(new SelectListItem { Text = d.naziv, Value = d.delatnostID });
                        }
                    }

                    @Html.DropDownListFor(model => model.delatnostID, listItems, "-- Select Status --",
                   htmlAttributes: new { @class = " dropdown-header" })
                </div>

            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.vidljivost, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @{
                        List<SelectListItem> listItemsVidljivost = new List<SelectListItem>();
                        listItemsVidljivost.Add(new SelectListItem { Text = "Samo Ja", Value = "samoja" });
                        listItemsVidljivost.Add(new SelectListItem { Text = "Moji Prijatelji", Value = "prijatelji" });
                        listItemsVidljivost.Add(new SelectListItem { Text = "Svi", Value = "svi" });
                    }

                    @Html.DropDownListFor(model => model.vidljivost, listItemsVidljivost, "-- Select Status --",
                   htmlAttributes: new { @class = " dropdown-header" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.datumKreiranja, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.datumKreiranja, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.datumKreiranja, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.naslov, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.naslov, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.naslov, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
        <div class="form-horizontal col-xs-6">
            <div class="form-group ">
                @Html.LabelFor(model => model.sadrzaj, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.sadrzaj, new { rows = 11, cols = 40, htmlAttributes = new { @class = "form-control input-lg" } })
                    @Html.ValidationMessageFor(model => model.sadrzaj, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
}
